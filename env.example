# Fleetopia.co Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/fleetopia"

# Authentication (NextAuth.js)
NEXTAUTH_SECRET="your-super-secret-key-here-minimum-32-characters-long"
NEXTAUTH_URL="http://localhost:3005"

# API Keys for External Services
OPENWEATHER_API_KEY="your-openweather-api-key"
GASBUDDY_API_KEY="your-gasbuddy-api-key"
FUEL_PRICES_API_KEY="your-fuel-prices-api-key"
FUTURES_API_KEY="your-futures-api-key"

# Google Services (Optional)
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
GOOGLE_CLIENT_ID="your-google-oauth-client-id"
GOOGLE_CLIENT_SECRET="your-google-oauth-client-secret"

# Production Settings
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3005"
NEXT_PUBLIC_API_URL="http://localhost:3005/api"

# Security Settings
ENCRYPTION_KEY="your-encryption-key-for-sensitive-data"
JWT_SECRET="your-jwt-secret-key"

# Monitoring & Analytics (Optional)
SENTRY_DSN="your-sentry-dsn-for-error-tracking"
NEXT_PUBLIC_SENTRY_DSN="your-sentry-dsn-for-error-tracking"
SENTRY_ORG="your-sentry-organization"
SENTRY_PROJECT="fleetopia-co"
ANALYTICS_ID="your-analytics-tracking-id"

# Email Service (Optional)
SMTP_HOST="your-smtp-host"
SMTP_PORT="587"
SMTP_USER="your-smtp-username"
SMTP_PASS="your-smtp-password"

# Payment Integration (Future)
STRIPE_PUBLISHABLE_KEY="your-stripe-publishable-key"
STRIPE_SECRET_KEY="your-stripe-secret-key"

# AI Model Settings
OPENAI_API_KEY="your-openai-api-key"
ANTHROPIC_API_KEY="your-anthropic-api-key"

# Microservices Configuration
GRPC_PORT="9001"
KAFKA_BROKER="localhost:9092"
REDIS_URL="redis://localhost:6379"
ELASTICSEARCH_URL="http://localhost:9200" 